<% @questions.each do |question| %>
  <div class="link row clearfix">
    <h2>
      <%= link_to question.question, question %><br>
      <small class="author">Submitted <%= time_ago_in_words(question.created_at) %> by <%= question.user.email %></small>
    </h2>

   <div class="btn-group">
   <!-- <a class="btn btn-default btn-sm" href="<%= question.question %>">View</a> -->
        <%= link_to like_question_path(question), method: :put,class: "btn btn-default btn-sm" do%>
         <span class="glyphicon glyphicon-chevron-up"></span>
             Upvote
         <%= question.get_upvotes.size %>
        <% end %>
        <%= link_to dislike_question_path(question), method: :put,class: "btn btn-default btn-sm" do %>
         <span class="glyphicon glyphicon-chevron-up"></span>
           Downvote
         <%= question.get_downvotes.size %>
        <% end %>   
   </div>
<% end %>